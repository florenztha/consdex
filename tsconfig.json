{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./frontend/src/*"]
    },
    "types": ["node", "vite/client"]
  },
  "include": [
    "frontend/src/**/*",
    "scripts/**/*"
  ],
  "references": [
    { "path": "./frontend/tsconfig.app.json" },
    { "path": "./frontend/tsconfig.node.json" }
  ]
}